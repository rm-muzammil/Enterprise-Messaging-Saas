generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Company {
  id          String      @id @default(uuid())
  name        String
  slug        String      @unique
  isActive    Boolean     @default(true)

  createdAt   DateTime    @default(now())
  updatedAt   DataTime    @updatedAt

  users           User[]
  custimers       Customer[]
  channels        Channel[]
  conversaions    Conversation[]


}